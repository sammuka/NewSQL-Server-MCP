{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "MCP Server: Debug Local",
      "type": "python",
      "request": "launch",
      "module": "src.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "LOG_LEVEL": "DEBUG",
        "ENVIRONMENT": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "stopOnEntry": false,
      "justMyCode": true,
      "args": []
    },
    {
      "name": "MCP Server: Debug READ_ONLY",
      "type": "python",
      "request": "launch",
      "module": "src.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "LOG_LEVEL": "DEBUG",
        "MCP_MODE": "READ_ONLY",
        "ENVIRONMENT": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "stopOnEntry": false,
      "justMyCode": true,
      "args": []
    },
    {
      "name": "MCP Server: Debug FULL_ACCESS",
      "type": "python",
      "request": "launch",
      "module": "src.main",
      "console": "integratedTerminal",
