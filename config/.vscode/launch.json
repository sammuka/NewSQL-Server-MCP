        "PYTHONPATH": "${workspaceFolder}/src",
        "LOG_LEVEL": "DEBUG",
        "MCP_MODE": "FULL_ACCESS",
        "ENVIRONMENT": "development"
      },
      "envFile": "${workspaceFolder}/.env",
      "stopOnEntry": false,
      "justMyCode": true,
      "args": []
    },
    {
      "name": "Test: Example Client",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/examples/example_client.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "stopOnEntry": false,
      "justMyCode": true,
      "args": []
